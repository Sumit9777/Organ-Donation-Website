<body class="text-center">
  <form action="/" class="form-signin" method="POST">
    <img class="mb-4" src="images/vmart.png" alt="" width="75" height="80">
    <h1 class="h3 mb-3 font-weight-normal">Login</h1>

    <input type="email" name="email" class="form-control top" placeholder="Email" id='emailsignin' required autofocus>
    <input type="password" name="pass" class="form-control bottom" placeholder="password" id='passsignin' required>
    <input type="button" class="btn btn-lg btn-primary btn-block" value="Login" id='passsignin' onclick="signIn()">
  </form>
  <script src="form.js"></script>
</body>

</html>